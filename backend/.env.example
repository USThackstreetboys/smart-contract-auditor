# Smart Contract AI Auditor - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# AI API CONFIGURATION
# ================================

# OpenAI API Key (Required)
# Get from: https://platform.openai.com/api-keys
# Example: sk-1234567890abcdef1234567890abcdef1234567890abcdef
OPENAI_API_KEY=your-openai-api-key-here

# Alternative: Anthropic API Key (Optional)
# Get from: https://console.anthropic.com/
# Example: sk-ant-1234567890abcdef1234567890abcdef
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment: development, staging, production
APP_ENV=development

# Debug mode: true/false
DEBUG=true

# Application name
APP_NAME=Smart Contract AI Auditor

# Application version
APP_VERSION=1.0.0

# ================================
# SERVER CONFIGURATION
# ================================

# Backend server host (default: 0.0.0.0)
HOST=0.0.0.0

# Backend server port (default: 8000)
PORT=8000

# Frontend URL for CORS (default: http://localhost:3000)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================
# FILE PROCESSING LIMITS
# ================================

# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Maximum analysis time in seconds (default: 120)
MAX_ANALYSIS_TIME=120

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.sol,.vy

# ================================
# AI MODEL CONFIGURATION
# ================================

# Primary AI model (default: gpt-4-1106-preview)
PRIMARY_AI_MODEL=gpt-4-1106-preview

# Fallback AI model
FALLBACK_AI_MODEL=gpt-3.5-turbo

# AI temperature (0.0 to 1.0, lower = more consistent)
AI_TEMPERATURE=0.1

# Maximum tokens for AI response
MAX_AI_TOKENS=4000

# ================================
# LOGGING CONFIGURATION
# ================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=

# Enable request logging: true/false
LOG_REQUESTS=true

# ================================
# SECURITY CONFIGURATION
# ================================

# Secret key for session management (generate a random string)
SECRET_KEY=your-secret-key-here-generate-random-string

# Rate limiting: requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Enable API key validation: true/false
VALIDATE_API_KEYS=true

# ================================
# PERFORMANCE CONFIGURATION
# ================================

# Enable caching: true/false
ENABLE_CACHE=true

# Cache TTL in seconds
CACHE_TTL=3600

# Number of worker processes (for production)
WORKERS=4

# Enable compression: true/false
ENABLE_COMPRESSION=true

# ================================
# DEVELOPMENT OPTIONS
# ================================

# Auto-reload on code changes: true/false
AUTO_RELOAD=true

# Enable API documentation: true/false
ENABLE_DOCS=true

# Enable CORS for development: true/false
ENABLE_CORS=true

# Mock AI responses (for testing without API calls): true/false
MOCK_AI_RESPONSES=false

# ================================
# DATABASE CONFIGURATION (Future use)
# ================================

# Database URL (if using database in future)
# DATABASE_URL=sqlite:///./test.db

# ================================
# MONITORING & ANALYTICS (Optional)
# ================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Analytics tracking ID
# ANALYTICS_ID=your-analytics-id

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# Domain name (for production)
# DOMAIN=your-domain.com

# SSL certificate paths (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ================================
# EXAMPLE CONFIGURATIONS
# ================================

# For Development:
# APP_ENV=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# AUTO_RELOAD=true
# MOCK_AI_RESPONSES=false

# For Production:
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=INFO
# AUTO_RELOAD=false
# WORKERS=4
# ENABLE_COMPRESSION=true

# For Testing:
# APP_ENV=testing
# MOCK_AI_RESPONSES=true
# LOG_LEVEL=WARNING